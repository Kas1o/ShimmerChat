@page "/agent/{agentguid}"
@inject NavigationManager navigation
@inject IKVDataService kvDataService
@inject IPopupService PopupService
@inject IJSRuntime JS
@inject IToolService ToolService

@if(agent != null)
{
    <div class="agent-page-container shimmer-content" style="background-image: url('@BackgroudPath'); background-size: cover; background-position: center; min-height: 100vh;">
        <div id="back">
            <button id="back-button" @onclick="NavigateBack">← Back</button>
        </div>

        <div id="content">
        <div class="content-wrapper">
            <div id="left-section">
                <label>agent name</label>
                <h3>@agent.name</h3>
                <div class="chat-section chat-list">
                    <div class="chat-item new-chat-item" @onclick="NewChat">
                        <div class="chat-name">Add New Chat</div>
                        <div class="chat-last-message"></div>
                    </div>

                    @foreach(var chat in agent.GetChats(kvDataService))
                    {
                        <div class="chat-item" @onclick= "() => OpenChat(chat)">
                            <div class="chat-info">
                                <div class="chat-name">@chat.Name</div>
                                <div class="chat-last-message">@GetLastMessageContent(chat)</div>
                            </div>
                            <button class="chat-delete-btn" @onclick:stopPropagation @onclick="() => ShowDeleteChatConfirmation(chat)">
                                ×
                            </button>
                        </div>
                    }
                </div>
                
                @if (DeleteChatPopupVisible)
                {
                    <div class="shimmer-popup-overlay" @onclick="() => DeleteChatPopupVisible=false">
                        <div class="shimmer-popup-content" @onclick:stopPropagation>
                            <h5>Delete Chat</h5>
                            <p>Are you sure you want to delete the chat "@ChatToDelete?.Name"?</p>
                            <div style="display: flex; gap: 10px; justify-content: flex-end; margin-top: 20px;">
                                <button class="btn btn-secondary" @onclick="() => DeleteChatPopupVisible=false">Cancel</button>
                                <button class="btn btn-danger" @onclick="DeleteChatConfirmed">Delete</button>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="settings-section shimmer-group">
                <h4>Settings</h4>
                <label>Name</label><br />
                <input class="shimmer-input" @bind="Name"/><br />
                <label>Description</label><br />
                <textarea class="shimmer-textarea" @bind="Description" />
                <label>Greeting</label><br />
                <textarea class="shimmer-textarea" @bind="Greeting" />
                <label>Alternative Greetings</label><br />
                <textarea class="shimmer-textarea" @bind="AlternativeGreetings" placeholder="Enter alternative greetings, sep by '<|>'" rows="4" />
                <label>Avatar</label><br />
                <img id="avatar-preview" src="@AvatarPath"/><br />
                <InputFile OnChange="InputAvatar" /><br />
                <label>Background</label><br />
                <InputFile OnChange="InputBackground" /> <br />
                
                <!-- Agent-specific Tools Section -->
                <h4 style="margin-top: 20px;">Custom Tools</h4>
                <div class="tool-management-section">
                    <div class="tool-selector">
                        <select class="shimmer-input" @bind="SelectedToolToAdd">
                            <option value="">Select a tool to add...</option>
                            @foreach(var tool in AvailableTools)
                            {
                                <option value="@tool.GetToolDefinition().name">@tool.GetToolDefinition().name</option>
                            }
                        </select>
                        <button class="btn btn-secondary" @onclick="AddToolToAgent" disabled="@(string.IsNullOrEmpty(SelectedToolToAdd))">Add Tool</button>
                    </div>
                    
                    <div class="tool-list">
                        <h5>Agent Tools:</h5>
                        @if (agent?.CustomToolNames != null && agent.CustomToolNames.Any())
                        {
                            @foreach (var toolName in agent.CustomToolNames)
                            {
                                <div class="tool-item">
                                    <span class="tool-name">@toolName</span>
                                    <button class="btn btn-danger btn-sm" @onclick="() => RemoveToolFromAgent(toolName)">Remove</button>
                                </div>
                            }
                        }
                        else
                        {
                            <p>No custom tools added yet.</p>
                        }
                    </div>
                </div>
                
                <button class="btn btn-primary" @onclick="Export">Export</button>
            </div>
        </div>
    </div>

    <style>
        #back {
        top: 10px;
        left: 10px;
        }

        #back-button {
        background: none;
        border: none;
        cursor: pointer;
        font-size: 16px;
        padding: 5px 10px;
        color: var(--color-text-primary);
        }

        /* 固定尺寸的网格项 */
        .shimmer-grid-item.fixed-size {
            width: 280px;
            height: 420px;
            min-height: 0;
            padding: 0;
            overflow: hidden;
        }


        #content {
            padding: 24px;
            margin-left: 0;
            margin-top: 0;
            height: auto;
            min-height: calc(100vh - 48px);
        }

        .content-wrapper {
            display: flex;
            width: 100%;
            height: 100%;
            margin-top: 20px;
            height: calc(100vh - 200px);
            gap: 20px;
        }

        .chat-section {
        width: 100%;
        padding-right: 20px;
        overflow-y: auto;
        flex-grow: 1;
        }

        .settings-section {
        height: 100%;
        width: 40%;
        flex-grow: 1;
        overflow: auto;
        }

        #left-section {
        width: 60%;
        height: 100%;
        display: flex;
        flex-direction: column;
        }
        .shimmer-grid-chat-item {
            background-image: linear-gradient(180deg, var(--color-primary) 0%, var(--color-primary-hover) 70%);
            color: white;
            border: none;
        }

        /* Avatar 图片样式 */
        #avatar-preview {
            width: 120px;
            height: 120px;
            object-fit: cover;
            border-radius: 8px;
            margin: 8px 0;
        }

        /* Shimmer content style */
        .shimmer-content {
            padding: 0px !important; /* 覆盖掉主容器的padding，以实现无缝的背景图 */
        }
        
        /* New chat list styles */
        .chat-list {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }
        
        .chat-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 12px 16px;
            background-color: var(--color-card);
            border: 1px solid var(--color-border);
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .chat-item:hover {
            border-color: var(--color-primary);
            background-color: var(--color-surface);
            box-shadow: var(--shadow-md);
        }
        
        .chat-info {
            flex-grow: 1;
        }
        
        .chat-name {
            font-weight: bold;
            color: var(--color-text-primary);
            margin-bottom: 4px;
        }
        
        .chat-last-message {
            color: var(--color-text-secondary);
            font-size: 0.9em;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            max-width: calc(100% - 30px);
        }
        
        .new-chat-item {
            background-color: var(--color-primary-light);
            color: white;
            border: 1px groove var(--color-primary);
        }
        
        .new-chat-item:hover {
            background-color: var(--color-primary);
        }
        
        .new-chat-item .chat-name {
            color: white;
        }
        
        .new-chat-item .chat-last-message {
            color: rgba(255, 255, 255, 0.7);
        }
        
        .chat-delete-btn {
            background: rgba(0, 0, 0, 0.5);
            color: white;
            border: none;
            border-radius: 50%;
            width: 28px;
            height: 28px;
            font-size: 18px;
            line-height: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            opacity: 0;
            transition: all 0.3s ease;
            margin-left: 10px;
        }
        
        .chat-item:hover .chat-delete-btn {
            opacity: 1;
        }
        
        .chat-delete-btn:hover {
            background: var(--color-error);
        }
        
        .shimmer-popup-overlay {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(0, 0, 0, 0.6);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 1000;
            backdrop-filter: blur(4px);
        }


        .shimmer-popup-content {
            background-color: var(--color-card);
            padding: 24px;
            border-radius: var(--radius-xl);
            box-shadow: var(--shadow-lg);
            border: 1px solid var(--color-border);
            max-width: 90vw;
            max-height: 90vh;
            overflow-y: auto;
            min-width: 300px;
            width: fit-content;
        }
        
        /* Tool management styles */
        .tool-management-section {
            margin-top: 20px;
            padding: 15px;
            border: 1px solid var(--color-border);
            border-radius: 8px;
        }
        
        .tool-selector {
            display: flex;
            gap: 10px;
            margin-bottom: 15px;
            align-items: center;
        }
        
        .tool-selector select {
            flex-grow: 1;
        }
        
        .tool-list {
            margin-top: 15px;
        }
        
        .tool-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 8px 12px;
            background-color: var(--color-surface);
            border: 1px solid var(--color-border);
            border-radius: 4px;
            margin-bottom: 8px;
        }
        
        .tool-name {
            font-weight: 500;
            color: var(--color-text-primary);
        }
    </style>
    </div>
}

