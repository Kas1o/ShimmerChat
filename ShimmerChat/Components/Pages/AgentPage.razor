@page "/agent/{agentguid}"
@inject NavigationManager navigation
@inject IKVDataService kvDataService
@inject IPopupService PopupService

@if(agent != null)
{
    <div class="agent-page-container shimmer-content" style="background-image: url('@BackgroudPath'); background-size: cover; background-position: center; min-height: 100vh;">
        <div id="back">
            <button id="back-button" @onclick="NavigateBack">← Back</button>
        </div>

        <div id="content">
        <div class="content-wrapper">
            <div id="left-section">
                <label>agent name</label>
                <h3>@agent.name</h3>
                <div class="chat-section shimmer-grid shimmer-group">
                        <div class="shimmer-grid-item shimmer-grid-chat-item fixed-size" @onclick="NewChat">
                        <div>
                            Add New Chat
                        </div>
                    </div>

                    @foreach(var chat in agent.GetChats(kvDataService))
                    {
                        <div class="shimmer-grid-item shimmer-grid-chat-item fixed-size" @onclick= "() => OpenChat(chat)">
                            <div>
                                @chat.Name
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="settings-section shimmer-group">
                <h4>Settings</h4>
                <label>Name</label><br />
                <input class="shimmer-input" @bind="Name"/><br />
                <label>Description</label><br />
                <textarea class="shimmer-textarea" @bind="Description" />
                <label>Greeting</label><br />
                <textarea class="shimmer-textarea" @bind="Greeting" />
                <label>Avatar</label><br />
                <img id="avatar-preview" src="@AvatarPath"/><br />
                <InputFile OnChange="InputAvatar" /><br />
                <label>Background</label><br />
                <InputFile OnChange="InputBackground" />
            </div>
        </div>
    </div>

    <style>
        #back {
        top: 10px;
        left: 10px;
        }

        #back-button {
        background: none;
        border: none;
        cursor: pointer;
        font-size: 16px;
        padding: 5px 10px;
        color: var(--color-text-primary);
        }

        /* 固定尺寸的网格项 */
        .shimmer-grid-item.fixed-size {
            width: 280px;
            height: 420px;
            min-height: 0;
            padding: 0;
            overflow: hidden;
        }


        #content {
            padding: 24px;
            margin-left: 0;
            margin-top: 0;
            height: auto;
            min-height: calc(100vh - 48px);
        }

        .content-wrapper {
            display: flex;
            width: 100%;
            height: 100%;
            margin-top: 20px;
            height: calc(100vh - 200px);
            gap: 20px;
        }

        .chat-section {
        width: 100%;
        padding-right: 20px;
        overflow-y: auto;
        flex-grow: 1;
        }

        .settings-section {
        height: 100%;
        width: 40%;
        flex-grow: 1;
        }

        #left-section {
        width: 60%;
        height: 100%;
        display: flex;
        flex-direction: column;
        }
        .shimmer-grid-chat-item {
            background-image: linear-gradient(180deg, var(--color-primary) 0%, var(--color-primary-hover) 70%);
            color: white;
            border: none;
        }

        /* Avatar 图片样式 */
        #avatar-preview {
            width: 120px;
            height: 120px;
            object-fit: cover;
            border-radius: 8px;
            margin: 8px 0;
        }

        /* Shimmer content style */
        .shimmer-content {
            padding: 0px !important; /* 覆盖掉主容器的padding，以实现无缝的背景图 */
        }
    </style>
    </div>
}

<!--404-->
@if(agent == null)
{
    <h1>404</h1>
    <p>the agent "@agentguid" not exist.</p>
}

@code {
    [Parameter]
    public string agentguid { get; set; } = string.Empty;

    private Agent? agent;

    protected override void OnParametersSet()
    {
        base.OnParametersSet();

        agent = null;

        if (Guid.TryParse(agentguid, out var guid))
        {
            try
            {
                agent = Agent.Load(guid, kvDataService);
            }
            catch (Exception)
            {
                agent = null;
            }
        }
    }

    string Name
    {
        get => agent?.name ?? string.Empty;
        set
        {
            if (agent != null)
            {
                agent.name = value;
                agent.Save(kvDataService); // Save the specific agent after changing the name
            }
        }
    }

    string Description
    {
        get => agent?.description ?? string.Empty;
        set
        {
            if (agent != null)
            {
                agent.description = value;
                agent.Save(kvDataService); // Save the specific agent after changing the description
            }
        }
    }

    string Greeting
    {
        get => agent?.greeting ?? string.Empty;
        set
        {
            if (agent != null)
            {
                agent.greeting = value;
                agent.Save(kvDataService);
            }
        }
    }

    string AvatarPath => $"/userimages/{agent.AvatarGuid}.png";
    string BackgroudPath => $"/userimages/{agent.BackgroundGuid}.png";

    private async void InputAvatar(InputFileChangeEventArgs e)
    {
        var file = e.File;
        if (file.ContentType != "image/png")
        {
            await PopupService.ShowAsync("Unsupported file type! Only .png file are supported.");
            return;
        }
        if (file.Size > 1024 * 1024 * 30) {
            await PopupService.ShowAsync("File Too Large! 30MiB limit!");
            return;
        }

        Stream stream = file.OpenReadStream(1024 * 1024 * 30, default);
        var guid = Guid.NewGuid();
        using (var localFile = File.Create($"{AppContext.BaseDirectory}/UserUploadImage/{guid}.png"))
        {
            await stream.CopyToAsync(localFile);
        }

        agent.AvatarGuid = guid;
        agent.Save(kvDataService);
        StateHasChanged();
    }
    private async void InputBackground(InputFileChangeEventArgs e)
    {
        var file = e.File;
        if (file.ContentType != "image/png")
        {
            await PopupService.ShowAsync("Unsupported file type! Only .png file are supported.");
            return;
        }
        if (file.Size > 1024 * 1024 * 30)
        {
            await PopupService.ShowAsync("File Too Large! 30MiB limit!");
            return;
        }

        Stream stream = file.OpenReadStream(1024 * 1024 * 30, default);
        var guid = Guid.NewGuid();
        using (var localFile = File.Create($"{AppContext.BaseDirectory}/UserUploadImage/{guid}.png"))
        {
            await stream.CopyToAsync(localFile);
        }

        agent.BackgroundGuid = guid;
        agent.Save(kvDataService);
        StateHasChanged();
    }


    private void NavigateBack()
    {
        navigation.NavigateTo("agentselect");
    }

    private void NewChat()
    {
        if (agent == null)
            return;

        var chat = new Chat
        {
            Guid = Guid.NewGuid(),
            Name = $"{DateTime.Now.ToString().Replace(" ","-").Replace("/","-").Replace(":","-")}",
        };

        if (!string.IsNullOrEmpty(agent.greeting))
            chat.AddMessage(
                new Message
                {
                    sender = Sender.AI,
                    timestamp = DateTime.Now,
                    message = new SharperLLM.Util.ChatMessage
                    {
                        Content = agent.greeting
                    }
                }
            );

        // Save the chat first
        chat.Save(kvDataService);
        agent.AddChatGuid(chat.Guid);
        // Save the agent
        agent.Save(kvDataService);

        navigation.NavigateTo(navigation.Uri + "/" + chat.Name);
    }

    void OpenChat(Chat chat)
    {
        navigation.NavigateTo(navigation.Uri + "/" + chat.Name);
    }
}