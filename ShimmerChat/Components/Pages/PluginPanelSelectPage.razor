@page "/pluginpanel"
@inject IPluginPanelService PluginPanelService

<PageTitle>插件设置列表</PageTitle>

<div class="plugin-panel-select-container">
    <h1 class="panel-main-title">插件设置列表</h1>
    <div class="panel-grid">
        @if (pluginPanels.Count > 0)
        {
            @foreach (var panel in pluginPanels)
            {
                <div class="panel-card" @onclick="() => NavigateToPanel(panel.Name)">
                    <h3 class="panel-card-title">@panel.Name</h3>
                    <p class="panel-card-description">@panel.Description</p>
                </div>
            }
        }
        else
        {
            <p class="panel-empty-message">暂无可用的插件设置面板</p>
        }
    </div>
</div>

<style>
    /* 面板网格 */
    .panel-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: var(--spacing-lg);
        margin-top: var(--spacing-lg);
    }

    /* 面板卡片 */
    .panel-card {
        background-color: var(--color-card);
        border: 1px solid var(--color-border);
        border-radius: var(--radius-lg);
        padding: var(--spacing-lg);
        transition: var(--transition);
        cursor: pointer;
        box-shadow: var(--shadow-sm);
    }

    .panel-card:hover {
        transform: translateY(-2px);
        border-color: var(--color-primary);
        box-shadow: var(--shadow-md);
    }

    .plugin-panel-select-container {
        padding: var(--spacing-lg);
        max-width: 1200px;
        margin: 0 auto;
    }

    .panel-main-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--color-text-primary);
        margin-bottom: var(--spacing-lg);
    }

    .panel-card-title {
        color: var(--color-text-primary);
        font-size: 1.125rem;
        font-weight: 600;
        margin: 0 0 var(--spacing-sm) 0;
    }

    .panel-card-description {
        color: var(--color-text-secondary);
        margin: 0;
    }

    .panel-empty-message {
        grid-column: 1 / -1;
        color: var(--color-text-tertiary);
        text-align: center;
        padding: var(--spacing-xl);
    }
</style>

@code {
    [Inject]
    public NavigationManager Navigation { get; set; } = null!;

    private List<PluginPanelInfo> pluginPanels = new();

    protected override async Task OnInitializedAsync()
    {
        // 确保插件面板服务已加载完成
        await Task.Delay(100); // 短暂延迟确保服务初始化
        pluginPanels = PluginPanelService.GetPluginPanels().Where(x => x.PanelDisplayPlace == ShimmerChatLib.Panel.PanelDisplayPlace.Settings).ToList();
    }
    
    private void NavigateToPanel(string panelName)
    {
        Navigation.NavigateTo($"/pluginpanel/{Uri.EscapeDataString(panelName)}");
    }
}