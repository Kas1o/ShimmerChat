@using ShimmerChat.Singletons
@using ShimmerChatLib.Context

<div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5); z-index: 1050;">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">编辑上下文修改器</h5>
                <button type="button" class="btn-close" @onclick="Cancel"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="modifier-name" class="form-label">修改器名称</label>
                    <input id="modifier-name" type="text" class="form-control" value="@_modifierName" readonly />
                </div>
                
                <div class="mb-3">
                    <label for="modifier-input" class="form-label">输入值</label>
                    <textarea id="modifier-input" @bind="_modifierInput" class="form-control" rows="3" placeholder="输入上下文修改器的值...">@_modifierInput</textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="Cancel">取消</button>
                <button type="button" class="btn btn-success" @onclick="Confirm">更新</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Inject] private IContextModifierService _contextModifierService { get; set; } = null!;
    
    [Parameter]
    public EventCallback<object> OnConfirm { get; set; }
    
    [Parameter]
    public EventCallback OnClose { get; set; }
    
    [Parameter]
    public string? ModifierName { get; set; }
    
    [Parameter]
    public string ModifierValue { get; set; } = string.Empty;
    
    private string? _modifierName;
    private string _modifierInput = string.Empty;
    
    protected override void OnParametersSet()
    {
        _modifierName = ModifierName;
        _modifierInput = ModifierValue;
    }
    
    private async Task Confirm()
    {
        if (!string.IsNullOrEmpty(_modifierName))
        {
            var result = new { ModifierName = _modifierName, InputValue = _modifierInput };
            await OnConfirm.InvokeAsync(result);
            await OnClose.InvokeAsync();
        }
    }
    
    private async Task Cancel()
    {
        await OnClose.InvokeAsync();
    }
}