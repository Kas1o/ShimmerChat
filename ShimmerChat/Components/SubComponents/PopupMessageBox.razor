@using ShimmerChat.Models
@implements IDisposable


@if (_options != null)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5); z-index: 1050;">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@_options.Title</h5>
                    <button type="button" class="btn-close" @onclick="Cancel"></button>
                </div>
                <div class="modal-body">
                    @_options.Message
                </div>
                <div class="modal-footer">
                    @if (_options.ShowCancel)
                    {
                        <button type="button" class="btn btn-secondary" @onclick="Cancel">@_options.CancelText</button>
                    }
                    <button type="button" class="btn btn-primary" @onclick="Confirm">@_options.ConfirmText</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Inject] private IPopupService? PopupService { get; set; }

    private PopupOptions? _options;

    private Action<PopupOptions?>? _onShowHandler;
    private Action? _onHideHandler;

    protected override void OnInitialized()
    {
        if (PopupService != null)
        {
            _onShowHandler = options => InvokeAsync(() =>
            {
                _options = options;
                StateHasChanged();
            });

            _onHideHandler = () => InvokeAsync(() =>
            {
                _options = null;
                StateHasChanged();
            });

            PopupService.OnShow += _onShowHandler;
            PopupService.OnHide += _onHideHandler;
        }
    }

    public void Dispose()
    {
        if (PopupService != null)
        {
            if (_onShowHandler != null) PopupService.OnShow -= _onShowHandler;
            if (_onHideHandler != null) PopupService.OnHide -= _onHideHandler;
        }
    }

    private void Confirm() => PopupService?.Confirm();
    private void Cancel() => PopupService?.Cancel();
}